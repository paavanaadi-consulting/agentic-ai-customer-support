# External AWS MCP Configuration
# Environment variables for connecting to external AWS MCP servers

# AWS Credentials and Region
AWS_PROFILE=default
AWS_REGION=us-east-1

# AWS MCP Server Settings
AWS_MCP_USE_EXTERNAL=true
AWS_MCP_USE_UVX=true
AWS_MCP_FALLBACK_TO_CUSTOM=true

# Lambda Tool MCP Server Configuration
LAMBDA_TOOL_MCP_ENABLED=true
FUNCTION_PREFIX=customer-support
FUNCTION_TAG_KEY=Environment
FUNCTION_TAG_VALUE=development

# Core MCP Server Configuration  
CORE_MCP_ENABLED=true

# Documentation MCP Server Configuration
DOCUMENTATION_MCP_ENABLED=true

# Logging
FASTMCP_LOG_LEVEL=ERROR

# External MCP Server Package Versions (latest recommended)
LAMBDA_TOOL_MCP_VERSION=latest
CORE_MCP_VERSION=latest
DOCUMENTATION_MCP_VERSION=latest
